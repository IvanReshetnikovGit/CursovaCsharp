@{
    ViewData["Title"] = "Home Page";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Error!</h4>
        <p>Next errors appeared!</p>
        <ul>
            @foreach (var key in ViewData.ModelState.Keys)
            {
                foreach (var error in ViewData.ModelState[key].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Train number</th>
            <th>Destination</th>
            <th>Departure time</th>
            <th>Peron</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.TrainAmount; i++)
        {
            <tr>
                <td>@i</td>
                <td>@Model.Schedule[i].GetDestination()</td>
                <td>@Model.Schedule[i].GetDepartureTime().GetTime()</td>
                <td>@Model.Schedule[i].GetPeron()</td>
            </tr>
        }
    </tbody>
</table>

<h2>Add new train</h2>

<form asp-action="AddTrain" method="post">
    <div class="form-group">
        <label for="destination">destination:</label>
        <input type="text" name="destination" class="form-control" required>
        <span asp-validation="destination" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="hour">hour:</label>
        <input type="text" name="hour" class="form-control" required>
        <span asp-validation="hour" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="minute">minute:</label>
        <input type="text" name="minute" class="form-control" required>
        <span asp-validation="minute" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="second">second:</label>
        <input type="text" name="second" class="form-control" required>
        <span asp-validation="second" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="peron">peron: </label>
        <input type="text" name="peron" class="form-control" required>
        <span asp-validation="peron" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add train</button>
</form>
